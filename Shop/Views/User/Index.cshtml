@* @model ProjectManagement.ViewModels.Users.IndexVM
 *@
@using Shop.Entities
@{
    this.Layout = "/Views/Shared/_Layout.cshtml";
    ViewData["title"] = "Users";
}

<a href="/Users/Create">NEW</a>
<div class="grid">
    <div class="row">
        <div class="col-1">Username</div>
        <div class="col-2">First Name</div>
        <div class="col-2">Last Name</div>
        <div class="col-2"></div>
    </div>
    @foreach (User item in Model.Items)
    {
        <div class="row">
            <div class="col-1">@item.Username</div>
            <div class="col-2">@item.FirstName</div>
            <div class="col-2">@item.LastName</div>
            <div class="col-2">
                edit delete
            </div>
        </div>
    }
</div>
